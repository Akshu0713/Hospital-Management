<div class="rounded-lg text-sm p-5 flex flex-col w-[60%] space-y-4  md:w-[50%] shadow-2xl mt-[40px] m-auto ">

<h2 class="text-4xl font-bold text-[#c07c7c] text-center mb-4">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, class: 'mt-1 p-2 w-full border rounded-md', autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, class: 'mt-1 p-2 w-full border rounded-md', autocomplete: "last_name" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: 'mt-1 p-2 w-full border rounded-md', autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :role %><br />
    <%= f.select :role, ["Receptionist", "Doctor"], 
             autofocus: true, autocomplete: "Role", class: 'mt-4 p-2 w-full border rounded-md bg-white shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50' %>

  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'mt-1 p-2 w-full border rounded-md' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'mt-1 p-2 w-full border rounded-md' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "border w-[40%] rounded-lg p-2 m-auto hover:bg-slate-800 hover:text-white font-bold text-lg" %>
  </div>
<% end %>
</div>

<%= render "devise/shared/links" %>
